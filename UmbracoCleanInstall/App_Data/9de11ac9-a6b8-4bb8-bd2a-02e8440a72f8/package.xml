<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<umbPackage>
  <files>
    <file>
      <guid>Fluent.UmbracoElmah.dll</guid>
      <orgPath>/bin</orgPath>
      <orgName>Fluent.UmbracoElmah.dll</orgName>
    </file>
    <file>
      <guid>Elmah.dll</guid>
      <orgPath>/bin</orgPath>
      <orgName>Elmah.dll</orgName>
    </file>
  </files>
  <info>
    <package>
      <name>Elmah Errors Integration</name>
      <version>1.0.0</version>
      <iconUrl />
      <license url="http://opensource.org/licenses/MIT">MIT License</license>
      <url>https://github.com/lssweatherhead/UmbracoElmahErrors</url>
      <requirements type="strict">
        <major>7</major>
        <minor>12</minor>
        <patch>4</patch>
      </requirements>
    </package>
    <author>
      <name>Laura Weatherhead</name>
      <website>https://this.isfluent.com</website>
    </author>
    <readme><![CDATA[]]></readme>
  </info>
  <DocumentTypes />
  <Templates />
  <Stylesheets />
  <Macros />
  <DictionaryItems />
  <Languages>
    <Language Id="1" CultureAlias="en-US" FriendlyName="en-US" />
  </Languages>
  <DataTypes />
  <Actions>
    <Action runat="install" undo="false" alias="AddXmlFragment" file="~/web.config" xpath="//configuration" position="end">
      <elmah>
        <errorFilter>
          <test>
            <equal binding="HttpStatusCode" value="404" type="Int32" />
          </test>
        </errorFilter>
        <security allowRemoteAccess="true" connectionStringName="umbracoDbDSN" applicationName="Umbraco Elmah" />
      </elmah>
    </Action>
  </Actions>
</umbPackage>